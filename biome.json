{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/.vscode/**/*",
			"**/index.html",
			"**/vite.config.ts",
			"!**/src/routeTree.gen.ts",
			"!**/src/styles.css"
		]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"includes": ["**/src/**/*.ts", "**/src/**/*.tsx"],
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2,
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useAnchorContent": "off",
				"noRedundantAlt": "off",
				"noLabelWithoutControl": "off",
				"useFocusableInteractive": "off",
				"useSemanticElements": "off",
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "off"
			},
			"performance": {
				"noImgElement": "off",
				"recommended": true
			},
			"recommended": true,
			"security": {
				"noDangerouslySetInnerHtml": "off",
				"recommended": true
			},
			"style": {
				"useConst": "error",
				"useImportType": "on",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			}
		}
	}
}
